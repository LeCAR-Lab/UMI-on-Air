<mujoco model="hexa_scorpion_valve">
    <option
            timestep="0.02"
            gravity="0 0 0"
            noslip_iterations="5"
            impratio="2.0" >
    </option>
    <compiler angle="radian" meshdir="./meshes" autolimits="true"/>
    <asset>
        <material name="wall_texture"  texuniform="false"  texture="wall_texture"/>
        <texture type="2d" name="wall_texture" file="./textures/ceramic.png"/>
    </asset>

    <include file="ur10e_umi.xml"/>
    <!-- Worldbody -->
    <worldbody>
        <!-- Wall -->
        <geom name="wall" pos="1.0 0 1." size="0.01 1.5 1.0" type="box" 
              conaffinity="1" rgba="0.75 0.75 0.75 1" condim="3" 
              friction="0.005 0.0001 0.00001" material="wall_texture"/>
        <geom pos="1.0 0 1." size="0.01 1.5 1.0" type="box" 
              conaffinity="1" rgba="0.75 0.75 0.75 1" condim="3" 
              friction="0.005 0.0001 0.00001" material="wall_texture"/>
        <!-- Valve -->
        <body name="valve" pos="0.975 0.0 1.0" quat="0.707 0. 0.707 0.">
            <joint name="valve_joint" type="hinge" pos="0 0 0" axis="0 0 1" range="1.5 6.28" damping="0.003" frictionloss="0.005" armature="0.0025"/>
            <geom name="valve_geom" type="cylinder" size="0.075 0.0075" rgba="0.5 0.5 0.5 1" mass="0.02" />
            <geom type="cylinder" size="0.075 0.0075" rgba="0.5 0.5 0.5 1" />
            <!-- Stick -->
            <body name="stick_1" pos="0 0 -0.02" quat="0.707 0 0. 0.707">
                <geom name="stick_1_geom" type="cylinder" size="0.02 0.02" pos="0 0 0" euler="0 0 0" rgba="0.8 0.8 0.8 1" mass="0.0025"/>
                <geom type="cylinder" size="0.02 0.01" pos="0 0 0" euler="0 0 0" rgba="0.8 0.8 0.8 1" />
                <body name="disk_1" pos="0 0 -0.02" quat="0.707 0 0. 0.707">
                    <geom name="disk_1_geom" type="cylinder" size="0.075 0.005" pos="0 0 0" euler="0 0 0" rgba="0.6 0.2 0.2 0.25" mass="0.0025"/>
                    <geom type="cylinder" size="0.075 0.005" pos="0 0 0" euler="0 0 0" rgba="0.6 0.2 0.2 0.25" />
                    <body name="stick_2" pos="0 0.06 -0.03" quat="0.707 0. 0. 0.707">
                        <joint name="stick_2_joint" type="hinge" pos="0 0 0" axis="0 0 1" range="-0.4 3.0" damping="0.005" frictionloss="0.0025"/>
                        <geom name="stick_2_geom" type="cylinder" size="0.0085 0.025" pos="0 0 0" euler="0 0 0" rgba="0.8 0.8 0.8 1" mass="0.0025" friction="2.0 0.005 0.0001"/>
                        <geom type="cylinder" size="0.0085 0.025" pos="0 0 0" euler="0 0 0" rgba="0.8 0.8 0.8 1" friction="2.0 0.005 0.0001" />
                    </body>
                </body>
                <!-- <body name="stick_2" pos="-0.0 0.0 -0.06" quat="0.707 0. 0.707 0.">
                    <geom name="stick_2_geom" type="cylinder" size="0.01 0.075" pos="0 0 0" euler="0 0 0" rgba="0.3 0.2 0.1 1" mass="0.5"/>
                    <geom type="cylinder" size="0.01 0.075" pos="0 0 0" euler="0 0 0" rgba="0.3 0.2 0.1 1" />
                </body> -->
            </body>
        </body>
        <!-- Robot (optional) -->
        <!-- Include a manipulator if the task involves a robot -->
    </worldbody>

    <!-- Actuator (if needed for the robot or valve) -->
    <!-- <actuator>
        <motor joint="valve_joint" ctrllimited="true" ctrlrange="0 1"/>
    </actuator> -->

    <!-- Sensor and Rewards -->
    <!-- <sensor>
        <jointpos name="valve_angle" joint="valve_joint" />
    </sensor> -->
</mujoco>

